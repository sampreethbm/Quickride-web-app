{
  "name": "quickride-web-app",
  "version": "0.1.0",
  "description": "Simple professional ride booking demo",
  "private": true,
  "scripts": {
    "dev": "esbuild js/app.js --bundle --sourcemap --outfile=dist/app.js --watch",
    "build": "esbuild js/app.js --bundle --minify --outfile=dist/app.js",
    "lint": "eslint . --ext .js,.html",
    "format": "prettier --write .",
    "start": "npx serve -s .",
    "optimize-images": "echo \"Install imagemin-cli and plugins to enable image optimization.\"",
    "optimize-images:watch": "echo \"Install chokidar-cli to enable watch mode.\"",
    "test": "vitest"
  },
  "devDependencies": {
    "esbuild": "^0.18.0",
    "eslint": "^8.50.0",
    "prettier": "^2.8.8",
    "serve": "^14.2.0",
    "vitest": "^1.0.0"
  }
}
