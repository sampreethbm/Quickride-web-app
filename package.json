{
  "name": "quickride-web-app",
  "version": "0.1.0",
  "description": "Simple professional ride booking demo",
  "private": true,
  "scripts": {
    "dev": "esbuild js/app.js --bundle --sourcemap --outfile=dist/app.js --watch",
    "build": "esbuild js/app.js --bundle --minify --outfile=dist/app.js",
    "lint": "eslint . --ext .js,.html",
    "format": "prettier --write .",
    "start": "npx serve -s .",
    "optimize-images": "npx imagemin \"images/*.{png,jpg,jpeg,svg}\" --out-dir=dist/images --plugin=svgo --plugin=pngquant --plugin=mozjpeg",
    "optimize-images:watch": "npx chokidar \"images/*\" -c \"npm run optimize-images\"",
    "test": "vitest"
  },
  "devDependencies": {
    "esbuild": "^0.18.0",
    "eslint": "^8.50.0",
    "prettier": "^2.8.8",
    "serve": "^14.2.0",
    "imagemin-cli": "^7.0.1",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.0",
    "imagemin-svgo": "^10.0.1",
    "chokidar-cli": "^3.0.0",
    "vitest": "^1.0.0"
  }
}
